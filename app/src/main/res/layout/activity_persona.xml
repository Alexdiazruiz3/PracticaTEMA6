<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityPersona">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/LayoutImagenes1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgHombre1"
                    android:layout_width="212dp"
                    android:layout_height="272dp"
                    app:srcCompat="@drawable/hombre1" />

                <ImageView
                    android:id="@+id/imgMujer1"
                    android:layout_width="125dp"
                    android:layout_height="251dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mujer1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutImagenes2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgHombre2"
                    android:layout_width="148dp"
                    android:layout_height="202dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/hombre2" />

                <ImageView
                    android:id="@+id/imgMujer2"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mujer2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutImagenes3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgHombre3"
                    android:layout_width="221dp"
                    android:layout_height="208dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/hombre3" />

                <ImageView
                    android:id="@+id/imgMujer3"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/mujer3" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>